doctype html
html 
    head 
        link(href="style.css", rel="stylesheet")
        script(src="client.js" defer) 
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(charset="utf-8")

        if title 
            title=title 
        else 
            title Default title from pug...

    body 
        header
            
            h1 My House Page
            nav 
                a(href = "/") HOME
                a(href="/login") LOGIN
                a(href="/create") CREATE HOUSE
            
                

        main 

            div(class="loginform")
