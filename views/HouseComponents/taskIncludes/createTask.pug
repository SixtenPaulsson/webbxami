form(action="/tasks", method="post" id=house.id+"addTaskBtn",  class="addTaskBtn toggleList")
    input(type="text", name="taskName", placeholder="task name", required)
    input(list=house.id+":taskStatus", name="procent", placeholder="Status på task", required)
    datalist(id=house.id+":taskStatus") 
        option(value="Färdigt") 
        option(value="Färdigställande") 
        option(value="Nästan färdigt") 
        option(value="Hälften") 
        option(value="Felsökning pågår")
        option(value="Påbörjad") 
        option(value="Inte påbörjad") 
    input(type="hidden", name="houseId",value=house.id, required)
    input(type="submit", value = "Add")